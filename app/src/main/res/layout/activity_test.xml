<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#ddd"
    android:orientation="vertical"
    android:padding="4dp"

    tools:context=".MainActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="2dp"
        android:background="#fff"
        android:gravity="center_vertical">

        <ImageView
            android:id="@+id/img_product_main"
            android:layout_width="178dp"
            android:layout_height="181dp"
            android:layout_gravity="center_horizontal"
            android:scaleType="centerCrop"
            android:src="@drawable/nike1" />

        <RadioGroup
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="left"
            android:padding="8dp">

            <RadioButton
                android:id="@+id/radio1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:checked="true"
                android:tag="1500"
                android:text="로보월드\n50000원" />

            <RadioButton
                android:id="@+id/radio2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:tag="2000"
                android:text="에버랜드\n40000원" />

            <RadioButton
                android:id="@+id/radio3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:tag="3000"
                android:text="롯데월드\n30000원" />

            <RadioButton
                android:id="@+id/radio4"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:tag="3000"
                android:text="대모월드\n20000원" />
        </RadioGroup>

    </LinearLayout>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="2dp"
        android:background="#fff"
        android:padding="4dp">
        <TextView
            android:id="@+id/txt_price"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:text="인원"
            android:textColor="#DC1255"
            android:textSize="20sp"
            android:textStyle="bold" />
        <Button
            android:id="@+id/btn_minus"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:text="-"
            android:textSize="20dp" />

        <EditText
            android:id="@+id/edit_count"
            android:layout_width="50dp"
            android:layout_height="50dp"

            android:gravity="center"
            android:inputType="number"
            android:text="1"
            android:textSize="20sp" />

        <Button
            android:id="@+id/btn_plus"
            android:layout_width="50dp"
            android:layout_height="50dp"

            android:text="+"
            android:textSize="20dp" />



    </LinearLayout>

    <!--    <LinearLayout-->
    <!--        android:layout_width="match_parent"-->
    <!--        android:background="#fff"-->
    <!--        android:layout_marginBottom="2dp"-->
    <!--        android:layout_height="wrap_content">-->
    <!--        <TextView android:layout_width="wrap_content"-->
    <!--            android:layout_height="wrap_content" android:text="배송비(50,000원이상 구입시 무료)" />-->
